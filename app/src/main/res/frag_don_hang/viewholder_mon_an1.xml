<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_ma"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hMA_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/tenMA_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/hMA_1"
        android:text="Tên món ăn" />

    <TextView
        android:id="@+id/vitriQA_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenMA_1"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/khcachQA_1"
        android:layout_toEndOf="@+id/hMA_1"
        android:text="Vị trí quán" />

    <TextView
        android:id="@+id/khcachQA_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tgianQA"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="2.5km" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vitriQA_1"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/tgianQA"
        android:layout_toEndOf="@+id/hMA_1">

        <TextView
            android:id="@+id/giaMA_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30.000đ" />

        <TextView
            android:id="@+id/saoMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/favourite"
            android:drawablePadding="2dp"
            android:text="4.1" />
    </LinearLayout>

    <TextView
        android:id="@+id/tgianQA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vitriQA_1"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:drawableStart="@drawable/stopwatch"
        android:drawablePadding="2dp"
        android:text="25'" />
</RelativeLayout>