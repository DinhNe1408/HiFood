<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanAnAct">

    <ImageView
        android:id="@+id/imgV_HinhQA"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/q5736563" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgV_HinhQA"
        android:layout_marginTop="-40dp"
        android:background="@drawable/bg_line_qa">

        <TextView
            android:id="@+id/ten_QA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/imgV_Thich_QA"
            android:text="Bếp Hifood"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgV_Thich_QA"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_round_favorite_border_24" />

        <TextView
            android:id="@+id/txtV_ViTri_QA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ten_QA"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/txtV_tgian_QA"
            android:drawableStart="@drawable/ic_round_location_on_24"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Số 6 Trần Văn Ơn, Phú Hòa, Thủ Dầu Một, Bình Dương" />

        <TextView
            android:id="@+id/txtV_tgian_QA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ten_QA"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/stopwatch"
            android:drawablePadding="2dp"
            android:text="25'" />

        <TextView
            android:id="@+id/sao_QA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtV_ViTri_QA"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/favourite"
            android:drawablePadding="2dp"
            android:text="4.1" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sao_QA"
            android:layout_marginTop="30dp"
            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPage2_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>