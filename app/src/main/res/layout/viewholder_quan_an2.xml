<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hinhQA_qa2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tenQA_qa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/hinhQA_qa2"
            android:text="Tên quán ăn"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/vitriQA_qa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenQA_qa2"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/hinhQA_qa2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Vị trí quán"
            android:textSize="14sp"
            android:textStyle="italic" />


        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vitriQA_qa2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/hinhQA_qa2">


            <TextView
                android:id="@+id/saoQA_qa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:gravity="fill_vertical"
                android:text="0,0"
                app:drawableLeftCompat="@drawable/ic_round_star_24" />

            <TextView
                android:id="@+id/khcachQA_qa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:gravity="fill_vertical"
                android:text="0,0 km"
                app:drawableLeftCompat="@drawable/ic_round_location_on_24" />

            <TextView
                android:id="@+id/tgianQA_qa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:gravity="fill_vertical"
                android:text="0 p"
                app:drawableStartCompat="@drawable/ic_round_timer_24" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recV_DSMonAn_qa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>