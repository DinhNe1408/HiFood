<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recV_ThucDon_QA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative1_QA"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />


    <RelativeLayout
        android:id="@+id/relative1_QA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_gh"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/imgV_Card_QA"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_round_restaurant_24" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignStart="@+id/imgV_Card_QA"
            android:layout_alignBottom="@+id/imgV_Card_QA"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="28dp"
            android:minWidth="23dp"
            app:cardBackgroundColor="@color/hifood1"
            app:cardCornerRadius="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtV_TSoL_gh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="3dp"
                    android:text="9"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtV_TongGia_QA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="0dp"
            android:text="10.000Ä‘" />
    </RelativeLayout>




</RelativeLayout>