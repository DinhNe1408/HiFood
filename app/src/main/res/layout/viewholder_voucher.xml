<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <ImageView
        android:id="@+id/imgV_HinhVoucher"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/khongchu" />

    <TextView
        android:id="@+id/txtV_TenVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgV_HinhVoucher" />

    <TextView
        android:id="@+id/txtV_ThoiGianVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_TenVoucher"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgV_HinhVoucher" />

    <TextView
        android:id="@+id/txtV_TienGiamVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_ThoiGianVoucher"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgV_HinhVoucher" />
</RelativeLayout>