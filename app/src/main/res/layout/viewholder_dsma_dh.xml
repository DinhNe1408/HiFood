<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="10dp"
    android:padding="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgV_HinhMA_dh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txtV_TenMA_dh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgV_HinhMA_dh"
        android:maxLines="2"
        android:text="Cơm chiên đùi gà" />

    <TextView
        android:id="@+id/txtV_GiaMa_dh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_TenMA_dh"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgV_HinhMA_dh"
        android:text="30.000đ" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_TenMA_dh"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/btn_Tang_dh"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_arrow_back_ios_new_24"/>

        <TextView
            android:id="@+id/txtV_SLMA_dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="3" />

        <ImageButton
            android:id="@+id/btn_Giam_dh"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_round_arrow_back_ios_new_24"/>
    </LinearLayout>


</RelativeLayout>