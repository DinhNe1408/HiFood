<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgV_HinhTK_ctk"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/w42419" />

    <TextView
        android:id="@+id/txtV_IDTK_ctk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgV_HinhTK_ctk"
        android:text="@string/hovaten" />

    <TextView
        android:id="@+id/txtV_TenTK_ctk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_IDTK_ctk"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imgV_HinhTK_ctk"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/hovaten" />

    <TextView
        android:id="@+id/txtV_SDT_ctk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_TenTK_ctk"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imgV_HinhTK_ctk"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/nhapsdt" />
</RelativeLayout>