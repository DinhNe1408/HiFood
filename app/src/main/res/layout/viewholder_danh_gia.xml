<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgV_HinhNDG"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/khongchu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imgV_HinhNDG"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtV_TenNDG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Tên người đăng"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtV_ThoiGianDG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian đăng"
                android:textSize="10sp" />

            <RatingBar
                android:id="@+id/rate3_SaoDG"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/RatingBar1" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtV_NoiDungDG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="Nội dung đánh giá " />

</LinearLayout>