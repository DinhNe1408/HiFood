<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView_qltk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgV_HinhTK_qltk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/w42419" />

        <TextView
            android:id="@+id/txtV_IDTK_qltk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imgV_HinhTK_qltk"
            android:text="@string/hovaten" />

        <TextView
            android:id="@+id/txtV_TenTK_qltk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtV_IDTK_qltk"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/imgV_HinhTK_qltk"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/hovaten" />

        <TextView
            android:id="@+id/txtV_SDT_qltk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtV_TenTK_qltk"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/imgV_HinhTK_qltk"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/nhapsdt" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>