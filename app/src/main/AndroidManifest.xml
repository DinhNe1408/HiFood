<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bctn">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/khongchu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BCTN">
        <activity
            android:name=".activity.ThanhToanAct"
            android:exported="false" />
        <activity
            android:name=".activity.QuanAnAct"
            android:exported="false" />
        <activity
            android:name=".activity.DangKy2Act"
            android:exported="false" />
        <activity
            android:name=".activity.DangKy1Act"
            android:exported="false" />
        <activity
            android:name=".activity.DangNhapAct"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" /> <!-- Giúp menu không nhảy khi bấm editext adjustNothing -->
        <activity
            android:name=".activity.TrangChuAct"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>